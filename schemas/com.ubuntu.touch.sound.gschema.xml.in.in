<schemalist gettext-domain="gsettings-ubuntu-touch-schemas">
    <schema id="com.ubuntu.touch.sound" path="/com/ubuntu/touch/sound/">
    <key name="silent-mode" type="b">
      <default>false</default>
      <_summary>Silent mode</_summary>
      <_description>Whether silent mode is active or not.</_description>
    </key>
    <key name="incoming-call-sound" type="s">
      <default>"/usr/share/sounds/ubuntu/ringtones/Ubuntu.ogg"</default>
      <_summary>Ringtone sound for the phone application.</_summary>
      <_description>This sound file is played, on incoming calls, by the phone application.</_description>
    </key>
    <key name="incoming-message-sound" type="s">
      <default>"/usr/share/sounds/ubuntu/notifications/Xylo.ogg"</default>
      <_summary>Incoming message sound for the phone application.</_summary>
      <_description>This sound file is played, on incoming messages, by the phone application.</_description>
    </key>
    <key name="incoming-message-vibrate" type="b">
      <default>true</default>
      <_summary>Whether vibration is enabled when new messages arrive or not.</_summary>
      <_description>This option is used to enable/disable vibration when new messages arrive.</_description>
    </key>
    <key name="incoming-message-vibrate-silent-mode" type="b">
      <default>true</default>
      <_summary>Whether vibration is enabled when new messages arrive in silent mode or not.</_summary>
      <_description>This option is used to enable vibration when new messages arrive even when silent mode is active.</_description>
    </key>
    <key name="incoming-call-vibrate" type="b">
      <default>true</default>
      <_summary>Whether vibration is enabled when new calls arrive or not.</_summary>
      <_description>This option is used to enable/disable vibration when new calls arrive.</_description>
    </key>
    <key name="incoming-call-vibrate-silent-mode" type="b">
      <default>true</default>
      <_summary>Whether vibration is enabled when new calls arrive in silent mode or not.</_summary>
      <_description>This option is used to enable vibration when new calls arrive even when silent mode is active.</_description>
    </key>
  </schema>
</schemalist>
